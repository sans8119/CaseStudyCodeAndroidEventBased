<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="10" android:orientation="vertical"
    android:id="@+id/relativeLayout">

<android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_weight="9"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <android.support.v4.view.PagerTabStrip
        android:id="@+id/V"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#33b5e5"
        android:textColor="#fff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

</android.support.v4.view.ViewPager>

    <LinearLayout android:id="@+id/button_wrapper_layout"
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="0dp" android:layout_weight="1" android:weightSum="2">
        <Button android:id="@+id/get_data_button"
            android:layout_width="0dp" android:background="@android:color/holo_green_light"
            android:textSize="18sp" android:text="@string/action_get_data"
            android:layout_height="match_parent" android:layout_weight="1" />
        <Button android:id="@+id/cleart_data_button"
            android:layout_width="0dp" android:background="@drawable/button_selector"
            android:textSize="18sp" android:text="@string/action_clear_data"
            android:layout_height="match_parent" android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>